\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{wx672hyperref}

\RequirePackage{xcolor}

\RequirePackage{hyperref}

\hypersetup{unicode,naturalnames,%
  breaklinks=true,
  bookmarksnumbered,plainpages=false,
  pdfborderstyle={/S/U/W .5},% border style will be underline of width .5pt 
  colorlinks=true,%urlcolor=blue,
  linkbordercolor=red,       % color of internal links
  citebordercolor=blue,     % color of links to bibliography
  filebordercolor=magenta,   % color of file links
  urlbordercolor=blue,
  % linkcolor=black,citecolor=black,
}

% https://tex.stackexchange.com/questions/49788/hyperref-url-long-url-with-dashes-wont-break
\PassOptionsToPackage{hyphens}{url}

% https://tex.stackexchange.com/questions/54946/how-to-break-long-url-in-an-item
\def\UrlBreaks{\do\/\do-} % break long url

% https://tex.stackexchange.com/questions/10555/hyperref-warning-token-not-allowed-in-a-pdf-string
\pdfstringdefDisableCommands{%
  \def\\{}%
  \def\texttt#1{<#1>}%
}