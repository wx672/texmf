\newenvironment{iblock}[1] % for images
{\setbeamercolor{block title}{bg=white}\setbeamercolor{block body}{bg=white}\begin{block}{#1}}
  {\end{block}}

\renewcommand\emph[1]{{\itshape #1}}
\newcommand\code[1]{{\ttfamily #1}}